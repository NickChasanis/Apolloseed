{
  "compilerOptions": {
    "rootDirs": [
      "./server/*"
    ],
    "outDir": "./dist",
    "lib": [
      "esNext"
    ],
    "target": "esNext",
    "module": "esNext",
    "moduleResolution": "node16",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "node"
    ]
  }
}
