{
  "compilerOptions": {
    "rootDirs": [
      "server"
    ],
    "outDir": "./dist",
    "lib": [
      "es2020"
    ],
    "target": "es2021",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": [
      "node"
    ]
  }
}
